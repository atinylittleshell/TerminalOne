{
  "name": "@terminalone/monorepo",
  "version": "0.1.0",
  "description": "A fast, elegant and intelligent cross-platform terminal.",
  "author": "Kun Chen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kunchenguid/TerminalOne.git"
  },
  "bugs": {
    "url": "https://github.com/kunchenguid/TerminalOne/issues"
  },
  "keywords": [
    "terminal",
    "shell",
    "xterm.js",
    "ai"
  ],
  "engineStrict": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint"
  },
  "build": {
    "appId": "io.terminalone.app",
    "productName": "Terminal One",
    "extends": null,
    "files": [
      "packages/app/dist/**/*"
    ],
    "directories": {
      "buildResources": "packages/app/assets"
    }
  },
  "devDependencies": {
    "@terminalone/eslint-config-custom": "*",
    "electron": "^24.1.2",
    "electron-builder": "^23.6.0",
    "eslint": "^7.32.0",
    "prettier": "^2.8.7",
    "turbo": "latest"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  },
  "homepage": ".",
  "packageManager": "npm@9.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
