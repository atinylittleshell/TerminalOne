{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env",
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "build:app": {
      "cache": false
    },
    "dev:terminal": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {
      "outputs": [
        "coverage/**"
      ]
    }
  }
}
